<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient2"
    tools:context=".EmergencyActivity">

    <!--Toolbar-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_white"
            android:background="@null"/>

    </RelativeLayout>



    <Button
        android:id="@+id/callButton"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@drawable/redut_removebg_preview"
        android:text="PRESS IN CASE OF EMERGENCY"
        android:textSize="10sp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/number1"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:text="0123185507"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:textColor="@color/colorRed"/>



    <TextView
        android:id="@+id/emergency"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_weight="3"
        android:gravity="center"
        android:text="EMERGENCY"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorRed">
    </TextView>


    <TextView
        android:id="@+id/callTxt"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Pressing this button will connect you directly to the Emergency Services. Only press this in the case of a real emergency."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite">


    </TextView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>





